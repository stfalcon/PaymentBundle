<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="interkassa_payment_new" pattern="/interkassa/new">
        <default key="_controller">StfalconPaymentBundle:InterkassaPayment:new</default>
    </route>

    <route id="interkassa_payment_status" pattern="/interkassa/status">
        <default key="_controller">StfalconPaymentBundle:InterkassaPayment:status</default>
    </route>

    <route id="interkassa_pay" pattern="/interkassa/pay">
        <default key="_controller">StfalconPaymentBundle:InterkassaPayment:pay</default>
    </route>

</routes>
